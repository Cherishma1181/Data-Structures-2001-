def linear_Search(array,n,x):  
    for i in range(0, n):  
        if (array[i]==x):  
            return i  
    return -1  
list1=[2,3,0,1,7]  
x=1
n=len(array)  
res=linear_Search(array,n,x)  
if(res == -1):  
    print("Element not found")  
else:  
    print("Element found at index: ",res)  
